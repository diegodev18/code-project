---
import SectionContainer from '@/components/sectionContainer.astro';

interface Props {
    title: string;
    description: string;
}
const { title, description } = Astro.props;
---
<SectionContainer>
    <div class="flex flex-col justify-center text-center px-5 min-h-[82svh]">
        <h1 class="text-4xl font-bold text-yellow-300">
            {title}
        </h1>
        <p class="text-xl text-gray-300">
            {description}
        </p>
    </div>
</SectionContainer>