---
import getProgressFromAProject from "@/utils/getProgressFromAProject";
import getProjectsContent from "@/utils/getProjectsContent";

interface Props {
    id: string;
    href: string;
    title: string;
    description: string;
    icon: {
        width: number;
        height: number;
        component: any;
    };
    session?: boolean;
}
const { id, href, title, description, icon: { width, height, component: Icon }, session } = Astro.props;

const { progress, percentaje, lenguage } = await getProgressFromAProject(id, 1);
const data = await getProjectsContent(id, lenguage, 'inicio');
const { collections } = data ?? { collections: [] };
---

<li class="snap-center">
    <a
    class="group w-[330px] md:w-[400px] aspect-[16/7] hover:bg-buttonHov bg-secondary px-5 md:px-2 rounded-lg flex gap-x-4 justify-center items-center transition duration-300 ease-in-out"
    title={`${title} - ${description}`}
    href={
        session
        ?
            progress === 0
            ?
                href
            :
                `${href}/${lenguage}/${collections.find(task => task.data.num === progress)?.data.id}`
        :
            '/profile'
    }
    >
        <div class="md:max-w-[240px]">
            <h3 class="font-semibold leading-7 line-clamp-2 text-xl md:text-2xl group-hover:text-yellow-300 transition duration-300 ease-in-out">
                {title}
            </h3>
            <p class="text-sm font-medium md:min-h-12 line-clamp-2 opacity-65 lg:pt-1 group-hover:opacity-100 transition duration-300 ease-in-out">
                {description}
            </p>
            <div class="relative w-full h-3 bg-white rounded-full mt-2">
                <div class="absolute bg-[#313131] md:group-hover:bg-[#363636] transition duration-300 ease-in-out h-full rounded-full" style={`width: ${percentaje}%`} />
            </div>
        </div>
        <div class="md:group-hover:scale-110 transition duration-300 ease-in-out">
            <Icon width={width + 5} height={height + 5} />
        </div>
    </a>
</li>