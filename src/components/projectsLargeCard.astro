---
import getProgressFromAProject from "@/utils/getProgressFromAProject";

interface Props {
    id: string;
    href: string;
    title: string;
    description: string;
    icon: {
        width: number;
        height: number;
        component: any;
    };
}
const { id, href, title, description, icon: { width, height, component: Icon } } = Astro.props;

const progress = getProgressFromAProject(id, 1);
---

<li class="snap-center">
    <a
    class="group w-[90svw] md:w-[400px] aspect-[16/6] md:aspect-[16/7] hover:bg-[#1B1B1B] bg-[#1E1E1E] px-5 md:px-2 rounded-lg flex gap-x-4 justify-center items-center transition duration-300 ease-in-out"
    href={href}
    >
        <div class="md:max-w-[240px]">
            <h3 class="font-semibold leading-7 line-clamp-2 text-2xl group-hover:text-yellow-300 transition duration-300 ease-in-out">
                {title}
            </h3>
            <p class="text-sm font-medium min-h-12 line-clamp-2 opacity-65 lg:pt-1 group-hover:opacity-100 transition duration-300 ease-in-out">
                {description}
            </p>
            <div class="relative w-full h-3 bg-white rounded-full mt-2">
                <div class="absolute bg-[#313131] md:group-hover:bg-[#363636] h-full rounded-full transition duration-300 ease-in-out" style={`width: ${progress}%`} />
            </div>
        </div>
        <div class="md:group-hover:scale-110 transition duration-300 ease-in-out">
            <Icon width={width} height={height} />
        </div>
    </a>
</li>