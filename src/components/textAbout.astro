---
import { render } from "astro:content";

interface Props {
  item: any;
  class?: string;
}
const { class: className, item } = Astro.props;

const { data } = item;
const { Content } = await render(item);
---

<article
  class="*:prose *:prose-invert *:prose-lg md:*:prose-xl *:max-w-none mb-4"
>
  <Content />
</article>
