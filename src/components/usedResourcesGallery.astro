---
import UsedResourceCard from "@/components/usedResourceCard.astro";
import SvglIcon from "@/components/icons/brands/svglIcon.astro";
import tablerIcons from "@/components/icons/brands/tablerIcons.astro";

const resources = [
  {
    name: "Svgl",
    description: "A beautiful library with SVG logos",
    href: "https://svgl.vercel.app/",
    icon: { width: 70, height: 70, component: SvglIcon },
  },
  {
    name: "Tabler Icons",
    description:
      "Tabler is a free and open source web application UI kit based on Bootstrap 5, with hundreds responsive components and multiple layouts.",
    href: "https://tabler.io/admin-template",
    icon: { width: 70, height: 70, component: tablerIcons },
  },
];
---

<ul class="grid md:grid-cols-2 gap-3">
  {
    resources.map(({ name, description, href, icon }) => (
      <li>
        <UsedResourceCard
          name={name}
          description={description}
          href={href}
          icon={icon}
        />
      </li>
    ))
  }
</ul>
