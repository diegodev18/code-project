---
interface Props {
    fullHeight?: boolean;
}
const { fullHeight = false } = Astro.props;
---

<section class:list={["flex justify-center items-center", fullHeight && "h-[calc(90vh-4rem)]"]}>
    <button class="py-2 px-4 bg-[#1E1E1E] hover:bg-buttonHov text-white font-bold rounded-full transition duration-300 ease-in-out" id="github-signin">
        Iniciar sesi√≥n con GitHub
    </button>
</section>

<script>
    document.addEventListener('astro:page-load', async () => {
        const loginButton = document.querySelector("#github-signin");
        const { signIn } = await import("auth-astro/client");
        
        loginButton?.addEventListener("click", async () => {
            await signIn("github");
        });
    });
</script>