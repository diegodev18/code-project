---
import SectionContainer from "@/components/sectionContainer.astro"

const categories = [
    {
        name: "Todas",
    },
    {
        name: "Bajo nivel",
    },
    {
        name: "Alto nivel",
    },
    {
        name: "Especial",
    },
    {
        name: "Especial",
    },
]
---

<SectionContainer class="!px-0 md:!px-20 lg:!px-40 py-4">
    <div class="overflow-x-auto px-4 md:px-0 scroll-hidden">
        <ul class="flex gap-x-3 text-nowrap">
            {
                categories.map((category) => (
                    <li class="px-2 py-1 bg-[#1E1E1E] rounded-xl">
                        <button>
                            {category.name}
                        </button>
                    </li>
                ))
            }
        </ul>
    </div>
</SectionContainer>

<style>
    .scroll-hidden {
        scrollbar-width: none;
    }
</style>