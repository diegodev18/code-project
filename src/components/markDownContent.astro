---
interface Props {
    content: string;
}
const { content } = Astro.props;
---

<article
id="markdown-content"
set:html={content}
/>

<style>
    #markdown-content {
        & :global(h1, h2, h3, h4, h5) {
            font-weight: 600;
            margin-top: 0.3rem;
            color: #fff;
        }
    
        & :global(h1) {
            font-size: 2rem;
        }
    
        & :global(h2) {
            font-size: 1.75rem;
        }
    
        & :global(h3) {
            font-size: 1.5rem;
        }
    
        & :global(h4) {
            font-size: 1.3rem;
        }
    
        & :global(h5) {
            font-size: 1.1rem;
        }
    
        & :global(p) {
            font-size: 1rem;
            color: #ccc;
            line-height: 1.5;
            padding-top: 0.5rem;
        }
    
        & :global(ul),
        & :global(ol) {
            padding-top: 0.5rem;
            padding-left: 1.5rem;
            margin-top: 0.5rem;
            color: #ddd;
        }
    
        & :global(ul) {
            list-style: disc;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
    
        & :global(ol) {
            list-style: decimal;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }
    
        & :global(li) {
            font-size: 1rem;
            line-height: 1.5;
        }
    
        & :global(code) {
            font-size: 1rem;
            padding: 0.2rem 0.5rem;
            font-weight: 600;
            background-color: #333;
            color: #ff8888;
            border-radius: 0.3rem;
        }
    
        & :global(pre) {
            font-size: 1rem;
            padding: 1rem;
            background-color: #333;
            border-radius: 0.3rem;
            margin-top: 1rem;
            overflow-x: auto;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        }
    
        & :global(pre code) {
            background-color: transparent;
            padding: 0;
            border-radius: 0;
            font-size: 1rem;
        }
    
        & :global(details) {
            margin-top: 1rem;
            padding: 0.8rem;
            background-color: #333;
            border-radius: 0.3rem;
            box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.3);
        }
    
        & :global(summary) {
            cursor: pointer;
            font-size: 1.1rem;
            font-weight: 600;
            padding: 0.5rem;
            background-color: #444;
            border-radius: 0.3rem;
            transition: background-color 0.3s ease;
        }
    
        & :global(summary:hover) {
            background-color: #555;
        }
    
        & :global(blockquote) {
            padding: 1rem;
            background-color: #333;
            border-left: 5px solid #ff8888;
            margin-top: 1rem;
            font-style: italic;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
        }
    
        & :global(blockquote p) {
            font-size: 1.1rem;
            color: #ccc;
        }
    }
</style>
