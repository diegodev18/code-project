---
interface Props {
  percentage: number;
}
const { percentage } = Astro.props;
---

<div class="relative w-full h-3 bg-white rounded-full mt-2">
  <div
    class="absolute bg-[#313131] md:group-hover:bg-[#363636] transition h-full rounded-full"
    style={`width: ${percentage}%`}
  >
  </div>
</div>
