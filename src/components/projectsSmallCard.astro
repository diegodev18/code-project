---
import getProgressFromAProject from '@/utils/getProgressFromAProject';
import getProjectsContent from "@/utils/getProjectsContent";
import { getSession } from 'auth-astro/server';

const session = await getSession(Astro.request);

interface Props {
    id: string;
    href: string;
    title: string;
    description: string;
    icon: {
        width: number;
        height: number;
        component: any;
    };
}
const { id, href, title, description, icon: { width, height, component: Icon } } = Astro.props;

const { progress, percentaje, lenguage } = getProgressFromAProject(id, 1);
const data = await getProjectsContent(id, lenguage, 'inicio');
const { collections } = data ?? { collections: [] };
---

<li class="mt-5 md:mt-2 lg:mt-3 snap-center">
    <a
    class="group w-[140px] md:w-[175px] lg:w-[200px] aspect-[9/10] hover:bg-buttonHov bg-secondary rounded-lg flex flex-col justify-center items-center relative transition duration-300 ease-in-out"
    title={`${title} - ${description}`}
    href={
        session
        ?
            progress === 0
            ?
                href
            :
                `${href}/${lenguage}/${collections.find(task => task.data.num === progress)?.data.id}`
        :
            '/profile'
    }
    >
        <div class="absolute -top-6 md:-top-2 lg:-top-4 md:group-hover:scale-105 md:group-hover:pb-16 transition-all duration-300 ease-in-out">
            <Icon width={width} height={height} />
        </div>
        <div class="pt-16 md:pt-20 lg:pt-[4.2rem] max-w-[130px] md:max-w-[170px] lg:max-w-[185px] px-2 z-10 flex flex-col h-full lg:gap-y-1">
            <h3 class="font-semibold leading-5 min-h-[60px] md:min-h-[85px] md:text-xl lg:min-h-0 line-clamp-3 lg:line-clamp-2 md:group-hover:text-yellow-300 transition duration-300 ease-in-out">
                {title}
            </h3>
            <p class="hidden lg:block font-medium opacity-65 group-hover:opacity-100 line-clamp-3 h-[60px] leading-5 transition duration-300 ease-in-out">
                {description}
            </p>
            <div class="relative w-full h-3 bg-white rounded-full mt-2">
                <div class="absolute bg-[#313131] md:group-hover:bg-[#363636] transition duration-300 ease-in-out h-full rounded-full" style={`width: ${percentaje}%`} />
            </div>
        </div>
    </a>
</li>
