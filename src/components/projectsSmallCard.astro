---
import getProgressFromAProject from '@/utils/getProgressFromAProject';

interface Props {
    id: string;
    href: string;
    title: string;
    icon: {
        width: number;
        height: number;
        component: any;
    };
}
const { id, href, title, icon: { width, height, component: Icon } } = Astro.props;

const progress = getProgressFromAProject(id, 1);
---

<li class="mt-5 snap-center">
    <a
    class="group w-[120px] h-[8rem] bg-[#1E1E1E] rounded-lg flex flex-col justify-center items-center relative"
    href={href}
    >
        <div class="absolute -top-6 md:group-hover:scale-105 md:group-hover:pb-16 transition-all duration-300 ease-in-out">
            <Icon width={width} height={height} />
        </div>
        <div class="pt-12 px-2 z-10 flex flex-col justify-between">
            <h3 class="font-semibold leading-5 line-clamp-2 md:group-hover:text-yellow-300 transition duration-300 ease-in-out">
                {title}
            </h3>
            <div class="relative w-full h-3 bg-white rounded-full mt-2">
                <div class="absolute bg-[#313131] md:group-hover:bg-[#363636] transition duration-300 ease-in-out h-full rounded-full" style={`width: ${progress}%`} />
            </div>
        </div>
    </a>
</li>