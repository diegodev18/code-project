---
import Layout from "@/layouts/Layout.astro";
import links from "@/db/links";
---

<Layout title="Links - Code Project" description="Links page for Code Project">
  <div
    class="flex flex-col items-center justify-center gap-y-4 h-[82vh] text-lg font-semibold text-light-primary"
  >
    <h1 class="text-2xl font-bold mb-3 text-purple-300">
      <span class="underline">Links</span> de interes para Code Project
    </h1>
    {
      Object.keys(links).map((link) => {
        const Link = links[link];
        return (
          <a
            href={Link.href}
            class="border-[1.5px] border-slate-600/30 hover:border-slate-600 px-3 py-[5px] rounded-xl transition duration-500 ease-in-out"
            target="_blank"
          >
            {Link.title}
          </a>
        );
      })
    }
  </div>
</Layout>
